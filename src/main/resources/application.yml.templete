spring:
  redis:
    database: 1
    host: 127.0.0.1
    port: 6379
    password: pcserver123.
    jedis:
      pool:
        max-active: 8
        max-wait: -1ms
        max-idle: 8
        min-idle: 0
    timeout: 3000
  thymeleaf:
    cache: true
    prefix: classpath:/templates/
  jmx:
    default-domain: com.hlyf.domin
cluster:
  isredis: true                      #是否开启redis缓存过滤请求
  isredistime: 7200                   #有效时间  单位s秒
  encrypt: true                      #是否启动加密   默认是
  datasource:
    driver-class-name: com.microsoft.sqlserver.jdbc.SQLServerDriver
    url: jdbc:sqlserver://127.0.0.1:2468;databaseName=Posmanagement_main
    username: sa
    password: pcserver123.
  #连接池的配置信息
  druid:
    initialSize: 5   # 初始化大小，最小，最大
    minIdle: 5
    maxActive: 40
    maxWait: 60000    # 配置获取连接等待超时的时间
    timeBetweenEvictionRunsMillis: 60000  # 配置间隔多久才进行一次检测，检测需要关闭的空闲连接，单位是毫秒
    minEvictableIdleTimeMillis: 300000    # 配置一个连接在池中最小生存的时间，单位是毫秒
    validationQuery: SELECT 1
    testWhileIdle: true
    testOnBorrow: false
    testOnReturn: false
    poolPreparedStatements: true
    maxPoolPreparedStatementPerConnectionSize: 20
    filters: stat,wall,log4j
    connectionProperties: druid.stat.mergeSql=true;druid.stat.slowSqlMillis=5000

master:
  datasource:
    driver-class-name: com.microsoft.sqlserver.jdbc.SQLServerDriver
    url: jdbc:sqlserver://127.0.0.1:2468;databaseName=Posmanagement_main
    username: sa
    password: pcserver123.
server:
  port: 12379
  servlet:
    context-path: /Hlyf
  tomcat:
    max-http-post-size: -1

